<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar"/>
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="colorPrimary">@color/colorPrimaryNotebook</item>
        <item name="colorOnPrimary">@color/notebook_text_color_87percent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNotebook</item>
        <item name="colorSecondary">@color/colorSecondaryNotebook</item>
        <item name="colorOnSecondary">@color/notebook_text_color_54percent</item>
        <item name="colorOnSurface">@color/notebook_text_color_87percent</item>
        <item name="colorSurface">@color/colorPrimaryBrightNotebook</item>
        <item name="colorBackgroundFloating">@color/colorPrimaryBrightNotebook</item>
        <item name="colorControlHighlight">@color/black_25percent</item>
        <item name="colorControlActivated">@color/colorSecondaryDarkNotebook</item>
        <item name="colorSwitchThumbNormal">@color/colorThumbNormalNotebook</item>
        <item name="android:textColor">@color/notebook_text_color_87percent</item>
        <item name="android:textColorPrimary">@color/notebook_text_color_87percent</item>
        <item name="android:textColorSecondary">@color/notebook_text_color_54percent</item>
        <item name="android:itemBackground">@color/colorPrimaryBrightNotebook</item>
        <item name="android:textColorHint">@color/notebook_text_color_54percent</item>
        <item name="android:listDivider">@color/black_12percent</item>
        <item name="bg_home">@color/proBgColorNotebook</item>
        <item name="toolbar_gradient">@drawable/toolbar_light_bg</item>
        <item name="toolbar_color">@color/colorSecondaryNotebook</item>
        <item name="my_message_color">@color/colorSecondaryDarkNotebook</item>
        <item name="other_message_color">@color/colorSecondaryNotebook</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimaryDarkMoon</item>
    </style>

</resources>